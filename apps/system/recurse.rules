	@for subdir in $(SUBDIRS); do\
		echo "make[1]: Entering directory \`$(PWD)/$$subdir"\';\
		PWD=$(PWD)/$$subdir;\
		if ! $(MAKE) --no-print-directory -C $(PWD)/$$subdir install; then exit 1; fi;\
		echo "make[1]: Leaving directory \`$(PWD)/$$subdir"\';\
	done

