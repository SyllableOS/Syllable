all:
	@for subdir in $(SUBDIRS); do\
		if ! $(MAKE) -C $$PWD/$$subdir; then exit 1; fi;\
	done



dist:
	@for subdir in $(SUBDIRS); do\
		if ! $(MAKE) -C $$PWD/$$subdir dist; then exit 1; fi;\
	done

clean:
	@for subdir in $(SUBDIRS); do\
		if ! $(MAKE) -C $$PWD/$$subdir clean; then exit 1; fi;\
	done

astyle:
	@for subdir in $(SUBDIRS); do\
		if ! $(MAKE) -C $$PWD/$$subdir astyle; then exit 1; fi;\
	done




